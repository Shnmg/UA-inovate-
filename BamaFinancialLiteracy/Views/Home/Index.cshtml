@{
    Layout = "_Layout";
    ViewData["Title"] = "Bama Financial Literacy";
}

<div class="container text-center py-5">
    <div class="d-flex justify-content-center align-items-center mb-4">
        <img src="/images/bama-logo.png" alt="Alabama Logo" width="60" class="me-3">
        <h1 class="display-4 mb-0">Bama Financial Literacy</h1>
    </div>

    @if (TempData["Message"] != null)
    {
        <div class="alert alert-success">@TempData["Message"]</div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger">@TempData["Error"]</div>
    }

    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-body">
                    <h3>
                        <i class="fas fa-piggy-bank text-crimson"></i> AI Financial Tools
                    </h3>
                    <div class="d-grid gap-3 mt-4">
                        <!-- Finance 101 Button -->
                        <button class="btn btn-crimson btn-lg text-white text-decoration-none"
                            onclick="window.location.href='/Home/Finance101';">
                            <i class="fas fa-book-open"></i> Finance 101
                        </button>
                        <a href="@Url.Action("Analyze", "Home")" class="btn btn-outline-crimson btn-lg">
                            <i class="fas fa-chart-line"></i> Analyze Your Spending (AI)
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Modal for CSV Upload -->
<div class="modal fade" id="csvModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-crimson text-white">
                <h5 class="modal-title">Import Tools</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form asp-action="ImportCsv" method="post" enctype="multipart/form-data">
                <div class="modal-body">
                    <input type="file" name="file" class="form-control" accept=".csv" required>
                    <div class="mt-2 text-muted small">
                        CSV format:
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-crimson">
                        <i class="fas fa-upload"></i> Upload
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<style>
    .btn-crimson {
        background-color: #9E1B32;
        color: white;
        border: 2px solid #000;
    }

    .btn-crimson:hover {
        background-color: #7a1426;
        color: white;
    }

    .btn-outline-crimson {
        color: #9E1B32;
        border: 2px solid #9E1B32;
    }

    .btn-outline-crimson:hover {
        background-color: #9E1B32;
        color: white;
    }

    .text-crimson {
        color: #9E1B32;
    }

    .bg-crimson {
        background-color: #9E1B32;
    }
</style>


