@{
    ViewData["Title"] = "Analyze Your Spending";
}

<div class="container text-center py-5">
    <div class="d-flex justify-content-center align-items-center mb-4">
        <img src="/images/bama-logo.png" alt="Alabama Logo" width="60" class="me-3">
        <h1 class="display-4 mb-0">Analyze Your Spending</h1>
    </div>

    @if (TempData["Message"] != null)
    {
        <div class="alert alert-success">@TempData["Message"]</div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger">@TempData["Error"]</div>
    }

    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-body text-center">
                    <h3><i class="fas fa-chart-pie text-crimson"></i> Spending AI Tools</h3>
                    <p>Use our advanced AI tools to analyze your spending habits, detect impulsive purchases, and get personalized financial recommendations.</p>
                    <p class="mb-4">Our AI-powered tools can help you:</p>
                    <div class="row mb-4 text-start">
                        <div class="col-md-6">
                            <ul class="list-unstyled">
                                <li><i class="fas fa-check-circle text-success me-2"></i> Track spending by category</li>
                                <li><i class="fas fa-check-circle text-success me-2"></i> Identify impulsive purchases</li>
                            </ul>
                        </div>
                        <div class="col-md-6">
                            <ul class="list-unstyled">
                                <li><i class="fas fa-check-circle text-success me-2"></i> Get AI recommendations</li>
                                <li><i class="fas fa-check-circle text-success me-2"></i> View spending patterns</li>
                            </ul>
                        </div>
                    </div>
                    <a href="@Url.Action("IntegratedTools")" class="btn btn-crimson btn-lg">
                        <i class="fas fa-robot me-2"></i> Launch Spending AI Tools
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
