<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Bama Financial Literacy</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="icon" href="/images/bama-logo.png" type="image/png">
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-light bg-crimson">
            <div class="container">
                <a class="navbar-brand" asp-controller="Home" asp-action="Index">
                    <img src="/images/bama-logo.png" width="30" height="30" class="d-inline-block align-top me-2" alt="Alabama Logo">
                    Bama Financial Literacy
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarCollapse">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarCollapse">
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["Action"]?.ToString() == "Index" ? "active" : "")" href="https://localhost:5001/">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["Action"]?.ToString() == "Finance101" ? "active" : "")" href="https://localhost:5001/Home/Finance101">Finance 101</a>
                        </li>
                        <li class="nav-item">
                            <form asp-controller="Home" asp-action="DataVisualization" method="get" class="d-inline">
                                <button type="submit" class="btn btn-link nav-link @(ViewContext.RouteData.Values["Action"]?.ToString() == "DataVisualization" ? "active" : "")">Analyze</button>
                            </form>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <main class="container py-4">
        @RenderBody()
    </main>

    <footer class="border-top footer text-muted bg-light">
        <div class="container text-center py-3">
            <span class="text-crimson">
                <i class="fas fa-football-ball me-2"></i>Roll Tide Financial Education
            </span>
            <div class="mt-2">
                <small>University of Alabama Financial Literacy Program</small>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>