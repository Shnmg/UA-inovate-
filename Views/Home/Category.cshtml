@model IEnumerable<FinancialProduct>

<div class="container py-5">
    <h1 class="text-center mb-4">
        <img src="/images/bama-logo.png" width="40" class="me-2">
        Financial Tools
    </h1>

    <div class="row">
        @foreach (var product in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card h-100">
                    <div class="card-header bg-crimson text-white">
                        <h5>@product.Name</h5>
                    </div>
                    <div class="card-body">
                        <p>@product.ShortDescription</p>
                        <a href="@Url.Action("Detail", new { id = product.Id })" 
                           class="btn btn-sm btn-outline-crimson">
                            Learn More
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>